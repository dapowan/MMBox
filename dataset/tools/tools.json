            }
          ]
        },
        {
          "input": {
            "contexts": [
              {
                "time": "10-01 13:00",
                "place": "office",
                "event": "meeting",
                "person": "bob"
              },
              {
                "time": "10-01 15:00",
                "place": "office",
                "event": "meeting",
                "person": "alice"
              },
              {
                "time": "10-01 20:10",
                "activity": "run"
              }
            ],
            "conditions": {
              "event": "meeting",
              "place": "office"
            }
          },
          "output": [
            {
              "start": "10-01 13:00",
